root = true

[*]
end_of_line = lf

[*.php]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*Test.php]
trim_trailing_whitespace = false

[*.{xml,json}]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
charset = utf-8
max_line_length = 80
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab
