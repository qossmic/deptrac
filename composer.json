{
    "name": "sensiolabs-de/deptrac",
    "description": "Deptrac is a static code analysis tool that helps to enforce rules for dependencies between software layers.",
    "license": "MIT",
    "authors": [
        {
            "name": "Tim Glabisch",
            "email": "tim.glabisch@sensiolabs.de"
        },
        {
            "name": "Simon MÃ¶nch",
            "email": "simon.moench@sensiolabs.de",
            "role": "maintainer"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "graphp/graphviz": "0.2.*",
        "nikic/php-parser": "^4.2",
        "phpdocumentor/graphviz": "^1.0",
        "phpstan/phpdoc-parser": "^0.3.3",
        "symfony/config": "^4.3",
        "symfony/console": "^4.3",
        "symfony/dependency-injection": "^4.3",
        "symfony/event-dispatcher": "^4.3",
        "symfony/finder": "^4.3",
        "symfony/options-resolver": "^4.3",
        "symfony/yaml": "^4.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.2.1"
    },
    "suggest": {
        "ext-dom": "For using the JUnit output formatter"
    },
    "autoload": {
        "psr-4": {
            "SensioLabs\\Deptrac\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\SensioLabs\\Deptrac\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
