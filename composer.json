{
    "name": "qossmic/deptrac",
    "description": "Deptrac is a static code analysis tool that helps to enforce rules for dependencies between software layers.",
    "license": "MIT",
    "authors": [
        {
            "name": "Tim Glabisch"
        },
        {
            "name": "Simon MÃ¶nch",
            "email": "simon.moench@qossmic.com",
            "role": "maintainer"
        }
    ],
    "require": {
        "php": "^7.4.0 || 8.0.*",
        "ext-json": "*",
        "composer/xdebug-handler": "^2.0",
        "graphp/graphviz": "0.2.*",
        "jetbrains/phpstorm-stubs": "^2020.2",
        "nikic/php-parser": "^4.3",
        "phpdocumentor/graphviz": "^1.0",
        "phpdocumentor/type-resolver": "^1.0",
        "phpstan/phpdoc-parser": "^0.5.5",
        "symfony/config": "^5.1",
        "symfony/console": "^5.1",
        "symfony/dependency-injection": "^5.1",
        "symfony/event-dispatcher": "^5.1",
        "symfony/finder": "^5.1",
        "symfony/options-resolver": "^5.1",
        "symfony/yaml": "^5.1"
    },
    "suggest": {
        "ext-dom": "For using the JUnit output formatter"
    },
    "autoload": {
        "psr-4": {
            "Qossmic\\Deptrac\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Qossmic\\Deptrac\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "7.4.0"
        },
        "sort-packages": true
    }
}
