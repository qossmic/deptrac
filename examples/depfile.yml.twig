{% import _self as dep %}

{% macro class_name_collector(regex) %}
type: className
regex: .*{{ regex }}.*
{% endmacro %}


paths: ["./examples/Sublayers1"]
exclude_files: []
layers:
  - name: Services
    collectors:
      - {{ dep.class_name_collector('Services') | yaml }}
    layers:
      - name: Infrastructure
        collectors:
          - {{ dep.class_name_collector('Infrastructure') | yaml }}
      - name: Domain
        collectors:
          - {{ dep.class_name_collector('Domain') | yaml }}
  - name: Controller
    collectors:
      - {{ dep.class_name_collector('Controller') | yaml }}
ruleset: []